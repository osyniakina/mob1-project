<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mob1_project.LocPage"
             Title="Wybierz swoje miasto">
    <ScrollView BackgroundColor="#FFA500">
        <VerticalStackLayout Spacing="15" Padding="15">
            <Image
                Source="smaczipozio1.png"
                HeightRequest="100"
                Aspect="AspectFit"
                HorizontalOptions="Center"
                Margin="0,0,0,10"/>

            <Label
                Text="Wybierz swoje miasto:"
                Style="{StaticResource Headline}"
                TextColor="White"
                x:Name="Lab"
                HorizontalOptions="Center"
                Margin="0,0,0,15"
                FontSize="Large"
                FontAttributes="Bold"/>

            <Frame CornerRadius="15"
                   HasShadow="True"
                   Padding="0"
                   Margin="20,0,20,0"
                   BackgroundColor="White"
                   BorderColor="SlateGray"
                   HorizontalOptions="Fill">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="LocMiasto_Clicked" CommandParameter="Warszawa"/>
                </Frame.GestureRecognizers>
                <StackLayout>
                    <Image Source="warszawa.jpg" Aspect="AspectFill"
                           HeightRequest="200"
                           HorizontalOptions="Fill"
                           VerticalOptions="Start"/>
                    <Label Text="Warszawa"
                           FontSize="Medium"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="Black"
                           Padding="10"/>
                </StackLayout>
            </Frame>

            <Frame CornerRadius="15"
                   HasShadow="True"
                   Padding="0"
                   Margin="20,0,20,0"
                   BackgroundColor="White"
                   BorderColor="SlateGray"
                   HorizontalOptions="Fill">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="LocMiasto_Clicked" CommandParameter="Bialystok"/>
                </Frame.GestureRecognizers>
                <StackLayout>
                    <Image Source="bialystok.jpg" Aspect="AspectFill"
                           HeightRequest="200"
                           HorizontalOptions="Fill"
                           VerticalOptions="Start"/>
                    <Label Text="BiaÅ‚ystok"
                           FontSize="Medium"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="Black"
                           Padding="10"/>
                </StackLayout>
            </Frame>

            <Frame CornerRadius="15"
                   HasShadow="True"
                   Padding="0"
                   Margin="20,0,20,20"
                   BackgroundColor="White"
                   BorderColor="SlateGray"
                   HorizontalOptions="Fill">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="LocMiasto_Clicked" CommandParameter="Lublin"/>
                </Frame.GestureRecognizers>
                <StackLayout>
                    <Image Source="lublin.jpg" Aspect="AspectFill"
                           HeightRequest="200"
                           HorizontalOptions="Fill"
                           VerticalOptions="Start"/>
                    <Label Text="Lublin"
                           FontSize="Medium"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="Black"
                           Padding="10"/>
                </StackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>