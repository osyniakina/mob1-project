<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mob1_project.MenuRestPage"
             Title="MenuRestPage"
             >
    <Grid RowDefinitions="Auto,*"
    BackgroundColor="#ff6600">
        <VerticalStackLayout>
            <Grid ColumnDefinitions="1*,6*">
                <ImageButton x:Name="BtnWrocMenu"
                     Source="arrow.png"
                     BackgroundColor="White"
                     Grid.Column="0"
                     Margin="5" 
                     Clicked="BtnWrocMenu_Clicked"/>
                <Label  x:Name="nazwaLabel"
                    Text=""
                    VerticalOptions="Start"
                    Grid.Column="1"
                    TextColor="White"
                    FontSize="Title"
                    FontAttributes="Bold"
                    HorizontalOptions="StartAndExpand" />
            </Grid>
        </VerticalStackLayout>
        <ScrollView x:Name="scrollView" Grid.Row="1" Margin="5, 10, 5, 10"
        VerticalOptions="FillAndExpand" BackgroundColor="#ff6600"
        >
            <VerticalStackLayout x:Name="menu" />
        </ScrollView>
    </Grid>
</ContentPage>